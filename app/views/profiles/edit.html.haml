.posts-wrapper
  .post
    .post-body
      .image-wrap
        = form_for @user, url: update_profile_path(@user.user_name), action: :patch, html: { multipart: true} do |f|
          .row
            .col-md-12
              .form-group.text-center
                %h4 Change your profile picture:
                .img-circle
                  = profile_avatar_select(@user)
                = f.file_field :avatar, onChange: 'loadFile(event)'
          .row
            .col-md-12
              .form-group.text-center
                %h4 Update your bio:
                = f.text_area :bio, label: false, rows: 4
          .form-group.text-center
            = f.submit "Update profile", class: 'btn btn-success'
